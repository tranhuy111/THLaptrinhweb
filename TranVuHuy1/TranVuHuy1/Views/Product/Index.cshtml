@model IEnumerable<TranVuHuy1.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Ảnh sản phẩm</th>
            <th>Loại</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0") đ</td>
                <td>@(item.Description?.Length > 25 ? item.Description.Substring(0, 25) + "..." : item.Description)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" style="max-width: 80px; max-height: 80px;" />
                    }
                </td>
                <td>@item.Category?.Name</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View</a>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Add" class="btn btn-success">Add New Product</a>
</div>
