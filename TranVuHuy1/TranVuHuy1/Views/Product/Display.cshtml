@model TranVuHuy1.Models.Product

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<div class="container mt-4">
    <h2>Chi Tiết Sản Phẩm</h2>
    <h5 class="text-muted">@Model.Name</h5>

    <div class="row mt-4">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid border rounded" style="max-height: 300px;" />
            }
            else
            {
                <div class="border rounded p-5 text-center bg-light">
                    <span class="text-muted">No image available</span>
                </div>
            }

            <div class="mt-3">
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Chỉnh Sửa</a>
                <a asp-action="Index" class="btn btn-outline-secondary ml-2">Quay về Danh sách</a>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th>Giá:</th>
                            <td class="font-weight-bold">@Model.Price.ToString("N0") đ</td>
                        </tr>
                        <tr>
                            <th>Mã số:</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Loại:</th>
                            <td>@Model.Category?.Name</td>
                        </tr>
                        <tr>
                            <th>Mô tả:</th>
                            <td>@Model.Description</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
