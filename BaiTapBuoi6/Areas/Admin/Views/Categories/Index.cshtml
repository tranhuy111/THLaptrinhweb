@model IEnumerable<BaiTapBuoi6.Models.Category>

@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-tags me-2"></i>Quản lý danh mục
            </h4>
            <a asp-area="Admin" asp-action="Create" class="btn btn-light">
                <i class="bi bi-plus-circle me-1"></i>Thêm danh mục mới
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col" width="60%">
                            <i class="bi bi-tag me-1"></i>Tên danh mục
                        </th>
                        <th scope="col" class="text-end">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@item.Name</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-area="Admin" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-info btn-sm ms-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm ms-1">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
