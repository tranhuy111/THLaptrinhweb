                            <!-- Menu Admin -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-grid me-1"></i>Quản lý sản phẩm
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                                    <i class="bi bi-tags me-1"></i>Quản lý danh mục
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Menu cho Member -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Index">
                                    <i class="bi bi-grid me-1"></i>Sản phẩm
                                </a>
                            </li>
