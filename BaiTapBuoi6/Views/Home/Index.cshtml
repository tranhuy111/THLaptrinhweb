@model IEnumerable<BaiTapBuoi6.Models.Product>
@{
    ViewData["Title"] = "Home Page";
	int numofQuantity = 1;
}
<section class="py-2">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col mb-5 d-flex">
                    <div class="card h-100 w-100 shadow-sm">
                        <div class="product-image-wrapper">
                            <img src="@item.ImageUrl" class="card-img-top" alt="..." />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title flex-grow-1">
                                @Html.DisplayFor(modelItem => item.Name)
                            </h5>
                            <div class="d-flex align-items-center mb-2">
                                <span>Price: </span>
                                <p class="mx-3 mb-0">@item.Price.ToString("#,##0") USD</p>
                            </div>
                            <a asp-controller="ShoppingCart" asp-action="AddtoCart" asp-route-productId="@item.Id"
                            asp-route-quantity="@numofQuantity">
                            <button class="btn btn-outline-dark mt-auto w-100"><i class="bi-cart-fill me-1"></i> Add to Cart
								</button>
							</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    .product-image-wrapper {
        position: relative;
        width: 100%;
        padding-top: 100%; /* 1:1 aspect ratio */
        overflow: hidden;
        border-radius: 0.5rem 0.5rem 0 0;
        background: #f8f9fa;
    }

        .product-image-wrapper img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }

    .card:hover .product-image-wrapper img {
        transform: scale(1.05);
    }

    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        flex: 1 1 auto;
    }
</style>
