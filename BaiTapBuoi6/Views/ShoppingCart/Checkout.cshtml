@model Order

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Checkout</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Checkout" method="post">
                        <div class="mb-4">
                            <label asp-for="ShippingAddress" class="form-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Shipping Address
                            </label>
                            <input asp-for="ShippingAddress" class="form-control form-control-lg"
                                   placeholder="Enter your shipping address" />
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label">
                                <i class="fas fa-comment me-2"></i>Notes
                            </label>
                            <textarea asp-for="Notes" class="form-control"
                                      rows="3" placeholder="Add any special instructions"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-check-circle me-2"></i>Place Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-code.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}